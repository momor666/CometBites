<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.utdallas.cometbites">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/cometbites_defaulttheme">
        <activity android:name=".view.LandingActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.ItemDescriptionActivity" />
        <activity
            android:name=".view.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".view.BrowseFoodJointsActivity"
            android:label="@string/title_activity_browse_food_joints" />
        <activity android:name=".view.BrowseItemsActivity" />
        <activity
            android:name=".view.YourCartActivity"
            android:theme="@style/cometbites_defaulttheme" />
        <activity android:name=".view.SignUpActivity" />
        <activity android:name=".view.PhoneVerifyActivity" />
        <activity android:name=".view.PaymentDetailActivity" />
        <activity android:name=".view.OrderConfirmationActivity" />
        <activity android:name=".view.EticketActivity" />
        <!--
 ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

    </application>

</manifest>