<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_eticket"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.utdallas.cometbites.EticketActivity">


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true">
    <TextView
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your E-Ticket \n Invoice number: 1233212967"
        android:textSize="20dp"
    />
</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/qrCodeLayout">


        <ImageView
            android:layout_width="345dp"
            android:layout_height="348dp"
            android:src="@drawable/qrcode"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/qrcode" />
    </LinearLayout>
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:stretchColumns="1"
        android:layout_marginTop="350dp">

        <TableRow>
            <TextView
                android:text="Estimated wait time"
                android:padding="3dip"
                android:textSize="20dp"
                android:layout_gravity="left"/>
            <TextView
                android:text="4-8 minutes"
                android:layout_gravity="right"
                android:textSize="20dp"

                android:padding="3dip" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="Orders before you"
                android:padding="3dip"
                android:textSize="20dp"
                android:layout_gravity="left"/>
            <TextView
                android:text="18"
                android:layout_gravity="right"
                android:textSize="20dp"
                android:padding="3dip" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Thank you for using \n COMETBITES!!!"
            android:layout_marginTop="500dp"
            android:textSize="30dp"
            />

    </LinearLayout>

</RelativeLayout>
