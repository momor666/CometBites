<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_browse_items"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6b6b6b"
    tools:context="edu.utdallas.cometbites.BrowseItemsActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/toolbar_browse_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_items"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <ListView
        android:layout_marginTop="5dp"
        android:layout_below="@id/toolbar_browse_items"
        android:id="@+id/browseItemListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:divider="#e2ba7d"
        android:dividerHeight="5dp">
    </ListView>

</RelativeLayout>
