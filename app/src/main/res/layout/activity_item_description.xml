<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_item_description"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.utdallas.cometbites.ItemDescriptionActivity">


    <ImageView
        android:id="@+id/item_image1"
        android:layout_width="249dp"
        android:layout_height="139dp"
        android:layout_marginTop="11dp"
        android:src="@drawable/subway_club"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/item_name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Subway Club"
        android:textColor="@color/textColor"
        android:textSize="25sp"
        android:layout_below="@+id/item_image1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/item_description1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="Tender sliced turkey breast, lean roast beef and tasty Black Forest ham come together with your choice of fresh veggies for a low-fat flavor fiesta. Try it today on freshly baked bread and experience all the deliciousity for 6 grams of fat."
        android:textColor="@color/textColor"
        android:textSize="15sp"
        android:layout_below="@+id/item_name1"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:layout_marginTop="35dp"
        android:textColor="@color/textColor"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/item_description1"

         />

    <ImageButton
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/minus"
        android:layout_marginTop="23dp"
        android:background="#FFF"
        android:layout_below="@+id/item_description1"
        android:layout_toStartOf="@+id/quantity"
        android:layout_marginEnd="23dp" />

    <ImageButton
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/plus"
        android:background="#FFF"
        android:layout_alignTop="@+id/delete"
        android:layout_toEndOf="@+id/quantity"
        android:layout_marginStart="22dp" />

    <ImageButton
        android:id="@+id/addtocart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/addtocart"
        android:layout_marginTop="13dp"
        android:background="#FFF"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/delete"
         />
</RelativeLayout>
